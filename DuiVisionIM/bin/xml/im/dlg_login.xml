				<item name="Excel" desc="电子表格" value="excel" image="skins\icon\ico_report.png" />
			</combobox>		
				
		
		<text pos="|-110,335,250,354" crshadow="808080" font="big"
				title="登录密码" tip="登录密码" />
				
